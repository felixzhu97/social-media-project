{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc --skipLibCheck && pnpm run bundle",
    "bundle": "esbuild src/lambda.ts --bundle --platform=node --target=node18 --outfile=dist/lambda.js --external:aws-sdk",
    "start": "node dist/lambda.js",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed:products200:dev": "dotenv -e .env.local -- ts-node src/scripts/seedProducts200.ts",
    "seed:products200:test": "dotenv -e .env.test -- ts-node src/scripts/seedProducts200.ts",
    "seed:products200:prod": "dotenv -e .env.prod -- ts-node src/scripts/seedProducts200.ts",
    "deploy:lambda": "npm run build && serverless deploy",
    "deploy:lambda:dev": "npm run build && serverless deploy --stage dev",
    "deploy:lambda:test": "npm run build && serverless deploy --stage test",
    "deploy:lambda:prod": "npm run build && serverless deploy --stage prod",
    "remove:lambda": "serverless remove",
    "remove:lambda:dev": "serverless remove --stage dev",
    "remove:lambda:test": "serverless remove --stage test",
    "remove:lambda:prod": "serverless remove --stage prod"
  },
  "dependencies": {
    "bcryptjs": "3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "serverless-http": "^3.2.0",
    "shared": "workspace:*",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "jsonwebtoken": "^9.0.0",
    "express-jwt": "^7.7.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "^20.17.30",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "dotenv-cli": "8.0.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.48.0",
    "mongodb-memory-server": "10.1.4",
    "nodemon": "^3.0.1",
    "serverless": "^3.38.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^1.4.0"
  }
}
